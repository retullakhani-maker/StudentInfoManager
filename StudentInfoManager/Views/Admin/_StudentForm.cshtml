@model Core.Model.Students

<form id="createStudentForm" method="post" enctype="multipart/form-data" asp-action="Save">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="ExistingPhotoPath" value="@(Model?.PhotoPath ?? "")" />

    <div class="row g-4">
        <!-- Left Column -->
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="FirstName" class="form-label fw-bold"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>

            </div>
            <div class="form-group mb-3">
                <label asp-for="LastName" class="form-label fw-bold"></label>
                <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Address" class="form-label fw-bold"></label>
                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter address"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DateOfBirth" class="form-label fw-bold"></label>
                <input asp-for="DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Gender" class="form-label fw-bold"></label>
                <select asp-for="Gender" class="form-select">
                    <option value="">-- Select Gender --</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="StateId" class="form-label fw-bold"></label>
                <select asp-for="StateId" class="form-select" asp-items="ViewBag.States" id="StateDropdown">
                    <option value="">-- Select State --</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CityId" class="form-label fw-bold"></label>
                <select asp-for="CityId" class="form-select" asp-items="ViewBag.Cities" id="CityDropdown">
                    <option value="">-- Select City --</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Birthplace" class="form-label fw-bold"></label>
                <input asp-for="Birthplace" class="form-control" placeholder="Enter birthplace" />
                <span asp-validation-for="Birthplace" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="form-label fw-bold">Profile Photo</label>

                @* Preview of current photo (if any) *@
                @if (!string.IsNullOrEmpty(Model?.PhotoPath))
                {
                    <div class="mb-2">
                        <img src="@Model.PhotoPath" alt="Profile" class="img-thumbnail" style="max-width:150px; max-height:150px;" />
                        <br />
                        <small class="text-muted">Current photo</small>
                    </div>
                }

                @* Hidden field to keep existing filename/path when no new file is uploaded *@
                <input type="hidden" name="ExistingPhotoPath" value="@(Model?.PhotoPath ?? "")" />

                @* File input — note: don't expect this to be prefilled *@
                <input type="file" name="PhotoFile" class="form-control" />

                <span asp-validation-for="PhotoPath" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Action Button -->
    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-success px-5">
            <i class="bi bi-save"></i> Save
        </button>
    </div>
</form>

<script>
    $(document).ready(function () {
        $("#StateDropdown").change(function () {
            debugger;
            var stateId = $(this).val();
            $("#CityDropdown").empty();
            $("#CityDropdown").append('<option value="">-- Select City --</option>');

            if (stateId !== "") {
                $.getJSON('/Admin/GetCitiesByState', { stateId: stateId }, function (data) {
                    $.each(data, function (i, city) {
                        $("#CityDropdown").append('<option value="' + city.id + '">' + city.name + '</option>');
                    });
                });
            }
        });
    });
</script>
@await Html.PartialAsync("_ValidationScriptsPartial")